<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        xmlns:titlebar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:statusBarColor="@color/primary_dark"
        titlebar:statusBarMode="light"
        titlebar:titleBarHeight="0dp"
        titlebar:leftType="imageButton"
        titlebar:leftImageResource="@drawable/ic_back"
        titlebar:rightType="imageButton"
        titlebar:rightImageResource="@drawable/ic_search"
        titlebar:centerType="searchView"
        titlebar:centerSearchRightType="delete"
        titlebar:centerSearchEdiable="true"
        titlebar:centerSearchBg="@color/blue_light"  />


</LinearLayout>