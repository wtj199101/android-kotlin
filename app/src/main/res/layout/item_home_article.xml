<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_item"
    android:layout_height="match_parent"
    android:id="@+id/item_home_article">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_8"
        android:scaleType="centerCrop"
        android:src="@drawable/image_place"
        android:contentDescription="图片"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_title"
         />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="这是标题，如果超出则显示省略号fsdaffsadfsdf"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_18"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_author"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:text="郭霖"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_12"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintRight_toLeftOf="@id/tv_time"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:gravity="center"
        android:text="1分钟前"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_12"
        app:layout_constraintLeft_toRightOf="@id/tv_author"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="@id/tv_chapter"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        />

    <TextView
        android:id="@+id/tv_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:background="@drawable/bg_corner"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:maxWidth="100sp"
        android:maxLines="1"
        android:text="完整项目完整项目完整项目"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_12"
        app:layout_constraintLeft_toRightOf="@id/tv_time"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="@id/img_collection"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        />
    <ImageView
        android:id="@+id/img_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:src="@drawable/ic_uncollection"
        app:layout_constraintLeft_toRightOf="@id/tv_chapter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="这是这篇文章的描述，可能还不短，可能有两行，但是最多只显示两行"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_14"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>