<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_head"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/layout_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/text_30"
            />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <TextView
        android:id="@+id/tv_no_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/layout_shimmer"
        android:background="@drawable/bg_item"
        android:drawableStart="@drawable/ic_no_image"
        android:padding="@dimen/dp_12"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="无图模式"
        android:textSize="@dimen/text_20"
        android:textColor="@color/secondary_text"/>
    <View
        android:id="@+id/v_divider_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"
        app:layout_constraintTop_toBottomOf="@id/tv_no_image"
        />
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_no_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/spacing_bigger"
        app:layout_constraintBottom_toBottomOf="@id/tv_no_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_no_image"
        />


    <TextView
        android:id="@+id/tv_dark_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_no_image"
        android:background="@drawable/bg_item"
        android:drawableStart="@drawable/ic_dark_style"
        android:paddingLeft="@dimen/dp_8"
        android:padding="@dimen/dp_12"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="夜间模式"
        android:textSize="@dimen/text_20"
        android:textColor="@color/secondary_text"/>
    <View
        android:id="@+id/v_divider_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tv_dark_style"
        />
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_dark_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/spacing_bigger"
        app:layout_constraintBottom_toBottomOf="@id/tv_dark_style"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_dark_style"
        />


    <TextView
        android:id="@+id/tv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dark_style"
        android:background="@drawable/bg_item"
        android:drawableStart="@drawable/ic_clear_cache"
        android:paddingLeft="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:text="清除缓存"
        android:textSize="@dimen/text_20"
        android:textColor="@color/secondary_text"/>
    <View
        android:id="@+id/v_divider_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tv_clear_cache"
        />
    <TextView
        android:id="@+id/tv_clear_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf=" @id/tv_clear_cache"
        app:layout_constraintBottom_toBottomOf="@id/tv_clear_cache"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:padding="@dimen/dp_4"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="1.2M"
        android:textSize="@dimen/text_16"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tv_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_clear_cache"
        android:background="@drawable/bg_item"
        android:drawableStart="@drawable/ic_version_upgrade"
        android:drawablePadding="12dp"
        android:paddingStart="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="版本升级"
        android:textSize="@dimen/text_20"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="@dimen/spacing_smaller"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/spacing_bigger"
        android:text="v1.0.0"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_upgrade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_upgrade"
        />

    <View
        android:id="@+id/v_divider_4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tv_upgrade"
        />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@drawable/bg_item"
        android:drawableStart="@drawable/ic_email"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="@dimen/dp_12"
        android:paddingStart="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="意见反馈"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_upgrade" />

    <View
        android:id="@+id/v_divider_5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tv_feedback"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/bg_item"
        android:textAppearance="?android:attr/textAppearance"
        android:gravity="center"
        android:padding="@dimen/spacing"
        android:text="退出登录"
        android:textColor="#F44336"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>